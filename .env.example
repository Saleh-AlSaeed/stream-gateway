PORT=3000
MAX_PROCS=8              # الحد الأقصى للجلسات المتزامنة
AUTO_EVICT=1             # عند الامتلاء أوقف أقدم جلسة تلقائيًا
PUBLIC_BASE=http://localhost:8090

# خيارات شبكة اختيارية لـ FFmpeg (إن احتجتها مع بعض السيرفرات)
TLS_INSECURE=0           # 1 لتعطيل التحقق من شهادة https (استعملها بحذر)
FFMPEG_UA=               # مثال: Mozilla/5.0

# إعدادات HLS
HLS_TIME=3               # مدة الشريحة بالثواني
HLS_LIST_SIZE=6          # حجم قائمة المانيفست الحيّة
